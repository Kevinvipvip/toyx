.sign-in-top {
    background-color: #ADADFF;
    height: 290rpx;
    /*position: relative;*/
    display: flex;
    justify-content: center;
    align-items: center;
}

.sign-in-top-text {
    display: flex;
    justify-content: center;
    flex-flow: column;
    align-items: center;
}

.sign-in-top-text text {
    font-size: 40rpx;
    color: #ffffff;
}

.sign-in-top-text .text-two {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #ffffff;
}

/* .sign-in-top-text .text-two text{
    font-size: 26rpx;
} */

.sign-in-date {
    background-color: #ffffff;
    box-shadow: 0 6rpx 34rpx 1rpx rgba(200, 200, 200, 0.35);
    border-radius: 15rpx;
    overflow: hidden;
    margin: -70rpx 25rpx 0;
}

.sign-in-date .every-day {
    margin: 0 30rpx;
    display: flex;
    justify-content: space-around;
}

.sign-in-date .day-item {
    width: 14.285%;
}

.sign-in-date .day-item text {
    color: #999999;
    font-size: 22rpx;
    display: block;
    text-align: center;
}

.sign-in-date .item-top {
    height: 80rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.sign-in-date .item-top .spot {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-top: -10rpx;
    margin-left: -10rpx;
    width: 20rpx;
    height: 20rpx;
    background-color: #f7f7f7;
    border-radius: 50%;
}

.sign-in-date .item-top .line {
    width: 100%;
    height: 8rpx;
    background-color: #f7f7f7;
}

.sign-in-date .on .item-top .spot,
.sign-in-date .on .item-top .line {
    background-color: #ADADFF;
}

.btn-sign-in {
    width: 487rpx;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #FBB03B;
    box-shadow: 0rpx 6px 7rpx 0rpx rgba(251, 176, 59, 0.4);
    border-radius: 45rpx;
    font-size: 34rpx;
    color: #ffffff;
    margin: 30rpx auto;
}

/* 签到记录 */
.sign-in-log {
    margin: 45rpx 30rpx;
}

.sign-in-log .sign-list {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}

.sign-in-log .sign-list:first-child {
    margin-top: 0;
}

.sign-in-log .sign-list:first-child>view {
    font-weight: 500;
    background: none;
}

.sign-in-log .sign-list>view {
    min-width: 145rpx;
    text-align: center;
    font-size: 32rpx;
    color: #666666;
}


.sign-in-log .sign-list .sign-status {
    background: #ADADFF;
    color: ffffff;
    border-radius: 10rpx;
    cursor: pointer;
}

.sign-in-log .sign-list .no-sign {
    background: #FBB03B;
}