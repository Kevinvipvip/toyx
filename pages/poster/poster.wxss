.page {
  background: #fcfafa;
}

.poster {
  height: 867rpx;
  position: relative;
}

.poster .cover {
  width: 100%;
  height: 100%;
}

.poster .create-poster {
  position: absolute;
  bottom: 31rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 70rpx;
  width: 381rpx;
  font-size: 32rpx;
  color: #ee3729;
  background: #ffc72f;
  display: flex;
  text-align: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx 0 rgba(247, 130, 55, 0.4);
  border-radius: 35rpx;
}

.invite-box {
  min-height: calc(100vh - 867rpx);
  background: #f8983e;
  overflow: hidden !important;
}

.invite-box .invite-cont {
  overflow: hidden;
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  margin: 50rpx 30rpx 0;
  height: 100%;
  padding: 0 30rpx 95rpx;
  min-height: calc(100vh - 917rpx);
}

.invite-box .title {
  font-size: 34rpx;
  height: 90rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.03);
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}

.invite-box image {
  width: 27rpx;
  height: 33rpx;
  margin-right: 10rpx;
}

.invite-list {
  margin-top: 40rpx;
}

.invite-list .invite {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.invite-list .invite .invite-left {
  display: flex;
}

.invite-list .invite .invite-left {
  height: 60rpx;
}

.invite-list .invite .invite-left .hd-box {
  width: 60rpx;
}

.invite-list .invite .invite-left .hd-box .header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.invite-list .invite .invite-left .invite-name {
  display: flex;
  height: 100%;
  flex-flow: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.invite-list .invite .invite-left .invite-name .nickname {
  font-size: 26rpx;
  color: #333;
}

.invite-list .invite .invite-left .invite-name .date {
  font-size: 22rpx;
  color: #999;
}

.invite-list .invite .price {
  color: #f78237;
  font-size: 22rpx;
}
