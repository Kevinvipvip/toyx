  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  height: 100vh;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal {
  position: absolute;
  left: 60rpx;
  right: 60rpx;
  top: 60rpx;
  bottom: 60rpx;
  background: #fff;
}
