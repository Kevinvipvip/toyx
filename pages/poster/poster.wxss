.canvas {
  position: fixed;
  left: -10000rpx;
}

.poster-canvas {
  width: 1000rpx;
  height: 1600rpx;
}

.modal.poster-modal {
  background: transparent;
  left: 0;
  right: 0;
  width: 500rpx;
  margin: auto;
  top: 0;
  bottom: 0;
  position: relative;
}

.poster-modal .poster-img {
  width: 500rpx;
  height: 800rpx;
  display: block;
}

.poster-modal .save-btn {
  width: 500rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0;
  border: 0;
  margin: 0;
  border-radius: 0;
  background-image: linear-gradient(90deg, #4796fb 0%, #497cfc 100%);
  font-size: 32rpx;
  letter-spacing: 1rpx;
  color: #e6e6e6;
  margin-top: 36rpx;
  font-weight: normal;
}