.page {
  background: #fcfafa;
  padding-top: 2rpx;
}

.info-list .info:first-child {
  margin-top: 0;
}

.info-list .info {
  min-height: 80rpx;
  margin-top: 2rpx;
  box-sizing: border-box;
  padding: 15rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.info-list .label {
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.info-list .right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-grow: 1;
  margin-left: 24rpx;
}

.info-list .right .value {
  font-size: 28rpx;
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  width: 0;
}

.info-list .right .value .cover {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.info-list .right .right-arrow {
  margin-left: 24rpx;
  width: 13rpx;
  height: 20rpx;
  flex-shrink: 0;
}

.info-list .right .value .placeholder {
  color: rgba(51, 51, 51, 0.6);
  text-align: right;
  margin: 0;
  padding: 0;
  background: transparent;
  font-size: 28rpx;
  font-weight: normal;
}

.info-list .right .value .text {
  color: rgba(51, 51, 51, 0.8);
  text-align: right;
}

.info-list .right .value picker {
  flex-grow: 1;
}

/* 保存 start */
.line-btn-box {
  position: fixed;
  padding: 24rpx;
  background: #fcfafa;
  left: 0;
  bottom: 0;
  width: 100%;
}

.line-btn-box .new-btn {
  width: 100%;
  height: 80rpx;
  min-height: auto;
  margin: 0;
  padding: 0;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  background: #FBB03B;
}

/* 保存 end */

/* 输入modal start */
.cmodal {
  width: 560rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  padding: 58rpx 50rpx 0;
}

.cmodal .title {
  text-align: center;
  font-size: 36rpx;
}

.cmodal .form {
  margin-top: 40rpx;
}

.cmodal .form input {
  width: 100%;
  height: 60rpx;
  line-height: 56rpx;
  box-sizing: border-box;
  border: 2rpx solid #e6e6e6;
  font-size: 26rpx;
}

.cmodal .btn-box {
  display: flex;
}

.cmodal .btn-box button {
  width: 0;
  flex-grow: 1;
  border-radius: 0;
  padding: 32rpx 0 33rpx;
  margin: 0;
  font-size: 36rpx;
  min-height: auto;
  font-weight: normal;
  line-height: 1;
  text-align: center;
}

.cmodal .btn-box button.button-hover {
  background-color: transparent;
}

.cmodal .btn-box .cancel {
  color: #333;
}

.cmodal .btn-box .confirm {
  color: #4888fb;
}

/* 输入modal end */