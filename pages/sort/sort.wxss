.page {
  box-sizing: border-box;
}

.cate-wrapper {
  /* margin-top: 20rpx; */
  display: flex;
  overflow: visible;
}

.cate-wrapper .one-level {
  width: 200rpx;
  flex-shrink: 0;
  background: #f5f5fa;
  box-sizing: border-box;
  height: 100vh;
}

.cate-wrapper .one-level .scroll {}

.cate-wrapper .one-level .item {
  font-size: 28rpx;
  padding: 33rpx 34rpx;
  color: #666;
  position: relative;
}

.cate-wrapper .one-level .item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 12rpx;
  height: 60rpx;
  margin: auto;
  background: #475a84;
}

.cate-wrapper .one-level .item.active {
  font-size: 32rpx;
  color: #475a84;
  background: #fff;
}

.cate-wrapper .two-level {
  background: #fff;
  flex-grow: 1;
  box-sizing: border-box;
  height: 100vh;
}

.cate-wrapper .two-level .bwg-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.cate-wrapper .two-level .bwg-list .bwg {
  width: calc(50% - 12rpx);
  padding: 24rpx 0;
}

.cate-wrapper .two-level .bwg-list .bwg .cover {
  width: 100%;
}

.cate-wrapper .two-level .bwg-list .bwg text {
  font-size: 32rpx;
  text-align: center;
  margin-top: 10rpx;
  display: block;
  overflow: hidden;
}


.goods-list .goods {
  margin: 0 24rpx;
  padding: 24rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.03);
  display: flex;
}

.goods-list .goods:last-child {
  border-bottom: 0;
}

.goods .cover {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.goods .info {
  flex-grow: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods .info .shang {}

.goods .info .shang .title {
  line-height: 1.4;
  font-size: 32rpx;
  color: #333;
}

.goods .info .shang .shop {
  margin-top: 17rpx;
  color: #666;
  font-size: 24rpx;
}

.goods .info .price::before {
  content: 'ï¿¥';
  margin-right: 5rpx;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
}

.goods .info .price {
  font-size: 34rpx;
  color: #ff3f3f;
}