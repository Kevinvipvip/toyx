.get-wechat {
  display: flex;
  padding: 0 24rpx;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background: #f4f2f2;
  z-index: 1;
  box-shadow: 0 7rpx 0 #fcfafa;
  height: 80rpx;
  box-sizing: border-box;
}

.get-wechat .icon {
  width: 48rpx;
  height: 48rpx;
}

.get-wechat .title {
  margin-left: 24rpx;
  font-size: 32rpx;
  color: #333;
  flex-grow: 1;
}

.get-wechat .right-arrow {
  width: 18rpx;
  height: 28rpx;
}

.btn-box {
  position: fixed;
  padding: 24rpx;
  background: #fcfafa;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.btn-box .new-btn {
  width: 100%;
  height: 80rpx;
  min-height: auto;
  margin: 0;
  padding: 0;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  background: #FBB03B;
}