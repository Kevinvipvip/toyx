.page {
  padding: 7rpx 0 98rpx;
  background: #fcfafa;
}

.pro-info {
}

.pro {
  margin-top: 7rpx;
}

.pro .pro-main {
  padding: 40rpx 24rpx;
  display: flex;
  background: #fff;
}

.pro-main image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.pro-main .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 24rpx;
  padding-bottom: 5rpx;
  flex-grow: 1;
}

.pro-main .info .title {
}

.pro-main .info .title > .text {
  font-size: 28rpx;
  line-height: 42rpx;
  color: rgba(61, 55, 55, 0.9);
}

.pro-main .info .title .attr {
  margin-top: 16rpx;
  display: flex;
}

.pro-main .info .title .attr .text {
  width: 0;
  flex-grow: 1;
  color: rgba(0, 0, 0, 0.6);
  font-size: 26rpx;
}

.pro-main .info .price-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pro-main .info .price-box .price::before {
  content: '￥';
  color: rgba(0, 0, 0, 0.6);
}

.pro-main .info .price-box .price {
  color: #ff3f3f;
  font-size: 28rpx;
}

.pro-main .info .price-box .amount {
  display: flex;
  align-items: center;
}

.pro-main .info .price-box .amount .times {
  width: 14rpx;
  height: 17rpx;
}

.pro-main .info .price-box .amount .num {
  margin-left: 7rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
}

.pro .carriage {
  margin-top: 2rpx;
  display: flex;
  justify-content: space-between;
  padding: 26rpx 24rpx;
  align-items: center;
  background: #fff;
}

.pro .carriage .label {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
}

.pro .carriage .price::before {
  content: '￥';
  color: rgba(0, 0, 0, 0.6);
}

.pro .carriage .price {
  font-size: 28rpx;
  color: #ff3f3f;
}

.pro .carriage .no-price {
  color: rgba(0, 0, 0, 0.8);
}

.order-foot {
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  box-shadow: 0 1rpx 35rpx 0 rgba(237, 237, 237, 0.75);
  background: #fff;
  padding: 0 24rpx;
  align-items: center;
  box-sizing: border-box;
}

.order-foot .total {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.order-foot .total .label {
  letter-spacing: 1rpx;
  color: #000;
}

.order-foot .total .price::before {
  content: '￥';
}

.order-foot .total .price {
  color: #ff3f3f;
}

.order-foot .pay-btn {
  display: block;
  margin-left: 40rpx;
}

.order-foot .pay-btn button {
  width: 230rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #FBB03B;
  padding: 0;
  margin: 0;
  font-weight: normal;
  min-height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  color: rgba(255, 255, 255, 0.8);
}
